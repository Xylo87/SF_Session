<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Umbrella Formation{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" 
            integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" 
            crossorigin="anonymous" referrerpolicy="no-referrer" />
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
            rel="stylesheet" 
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" 
            crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('styles/app.css')}}">
        {% endblock %}

    </head>
    <body>
        <div id="container">
            <nav>
                <div id="menus">    
                    <img src="{{ asset('img/Logo.png')}}">
                    <h1 id="mainTitle">Umbrella <br> Formation</h1>
                    <a href="{{ path('app_formation')}}">Accueil</a>
                    <a href="{{ path('app_formation')}}">Formations</a>
                    <a href="{{ path('app_session')}}">Sessions</a>
                    <a href="{{ path('app_stagiaire')}}">Stagiaires</a>
                </div>
                <div id="logs">
                    <i class="fa-solid fa-key"></i>
                    <a href="#">Connexion</a>
                </div>    
                <div id="flash">
                    {% for message in app.flashes('stAddEditSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('stDeleteSuccess') %}
                        <div class="alert alert-danger">
                            {{message}}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('seAddEditSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('seDeleteSuccess') %}
                        <div class="alert alert-danger">
                            {{message}}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('stSeAddSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('stSeDelSuccess') %}
                        <div class="alert alert-danger">
                            {{message}}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('moSeDelSuccess') %}
                        <div class="alert alert-danger">
                            {{message}}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('moSeAddSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}
                    {# {% for message in app.flashes('inputError') %}
                        <div class="flash-notice">
                            {{message}}
                        </div>
                    {% endfor %} #}
                </div>
            </nav>
            <main>
            {% block body %}{% endblock %}
            </main>
            <footer>
                <small>Réglement intérieur</small>
                <small>Mentions légales</small>
                <small>Planning</small>
                <small id="copyright">©Xylo {{"now"|date("Y")}}</small>
            </footer>
        </div>
        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" 
            crossorigin="anonymous"></script>
            <script src="{{ asset('app.js')}}"></script>
        {% endblock %}
    </body>
</html>
