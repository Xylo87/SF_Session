<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Umbrella Formation{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
            rel="stylesheet" 
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" 
            crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('styles/app.css')}}">
        {% endblock %}

    </head>
    <body>
        <nav>
            <ul>
                <li><a href="{{ path('app_formation')}}">Nos formations</a></li>
                <li><a href="{{ path('app_session')}}">Liste des sessions</a></li>
                <li><a href="{{ path('app_stagiaire')}}">Liste des stagiaires</a></li>
            </ul>
            {% for message in app.flashes('stAddEditSuccess') %}
                <div class="alert alert-success">
                    {{message}}
                </div>
            {% endfor %}
            {% for message in app.flashes('stDeleteSuccess') %}
                <div class="alert alert-danger">
                    {{message}}
                </div>
            {% endfor %}
            {% for message in app.flashes('seAddEditSuccess') %}
                <div class="alert alert-success">
                    {{message}}
                </div>
            {% endfor %}
            {% for message in app.flashes('seDeleteSuccess') %}
                <div class="alert alert-danger">
                    {{message}}
                </div>
            {% endfor %}
            {# {% for message in app.flashes('inputError') %}
                <div class="flash-notice">
                    {{message}}
                </div>
            {% endfor %} #}
        </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" 
            crossorigin="anonymous"></script>
            <script src="{{ asset('js/script.js')}}"></script>
        {% endblock %}
    </body>
</html>
